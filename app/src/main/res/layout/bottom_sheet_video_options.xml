<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:background="@drawable/bottom_sheet_rounded_corners"
    android:backgroundTint="@color/white">
    <View
    android:layout_width="40dp"
    android:layout_height="4dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bottom_sheet_grabber"
    android:backgroundTint="@color/black"/>

    <TextView
        android:gravity="center"
        android:id="@+id/bottomSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_n_video"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/optionShare"
            style="@style/BottomSheetActionItem">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_chia_se"
                app:tint="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chia sẻ"
                style="@style/BottomSheetActionText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionAddTo"
            style="@style/BottomSheetActionItem">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_danh_sach_phat"
                app:tint="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách phát"
                style="@style/BottomSheetActionText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionDelete"
            style="@style/BottomSheetActionItem">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_xoa_bo"
                app:tint="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa bỏ"
                style="@style/BottomSheetActionText" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>